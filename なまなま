    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        // AOSåˆæœŸåŒ–
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100,
        });

        // ãƒ­ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°ç”»é¢
        window.addEventListener('load', () => {
            const loading = document.getElementById('loading');
            setTimeout(() => {
                loading.style.opacity = '0';
                setTimeout(() => {
                    loading.style.display = 'none';
                }, 500);
            }, 1000);
        });

        // ãƒ†ãƒ¼ãƒåˆ‡ã‚Šæ›¿ãˆ
        const toggleButton = document.getElementById('theme-toggle');
        toggleButton.addEventListener('click', () => {
            document.body.classList.toggle('dark');
            document.querySelectorAll('.modal').forEach(modal => modal.classList.toggle('dark'));
        });

        // Apple Musicãƒ—ãƒ¬ã‚¤ãƒ¤ãƒ¼ï¼ˆãƒ¢ãƒƒã‚¯ï¼‰
        function playMusic() {
            document.getElementById('current-song').textContent = 'Playing: Awesome Tech Track';
            // æœ¬ç•ªå®Ÿè£…: Apple Music API (https://developer.apple.com/documentation/applemusicapi)
            // ä¾‹: MusicKit.configure({ developerToken: 'YOUR_TOKEN' });
        }
        function pauseMusic() {
            document.getElementById('current-song').textContent = 'Paused';
        }

        // ã‚¢ã‚¯ã‚»ã‚¹ã‚«ã‚¦ãƒ³ã‚¿ãƒ¼
        let visitorCount = localStorage.getItem('visitorCount') || 0;
        visitorCount++;
        localStorage.setItem('visitorCount', visitorCount);
        document.getElementById('visitor-count').textContent = visitorCount;

        // æœ€æ–°ãƒ„ã‚¤ãƒ¼ãƒˆï¼ˆãƒ¢ãƒƒã‚¯ï¼‰
        const tweetContainer = document.getElementById('tweet-container');
        tweetContainer.innerHTML = `
            <div class="p-4 border-b border-gray-300 dark:border-gray-600 hover-scale">
                <p class="font-semibold">@gadgetter45</p>
                <p>æœ€æ–°ã‚¬ã‚¸ã‚§ãƒƒãƒˆã‚’ãƒ¬ãƒ“ãƒ¥ãƒ¼ï¼ã‚ã£ã¡ã‚ƒã‚«ãƒƒã‚³ã„ã„ãï¼ #Tech #Gadget</p>
                <p class="text-gray-500 dark:text-gray-400 text-sm">2025-05-29 13:39 JST</p>
            </div>
        `;
        // æœ¬ç•ªå®Ÿè£…: X API (https://developer.x.com/en/docs)
        // ä¾‹: fetch('https://api.x.com/2/users/by/username/gadgetter45/tweets', { headers: { Authorization: 'Bearer YOUR_TOKEN' } })

        // ãƒ¢ãƒ¼ãƒ€ãƒ«åˆ¶å¾¡
        function openModal(id) {
            document.getElementById(id).style.display = 'flex';
        }
        function closeModal(id) {
            document.getElementById(id).style.display = 'none';
        }

        // ã‚³ãƒ³ã‚¿ã‚¯ãƒˆãƒ•ã‚©ãƒ¼ãƒ ï¼ˆãƒ¢ãƒƒã‚¯ï¼‰
        document.getElementById('contact-form').addEventListener('submit', (e) => {
            e.preventDefault();
            alert('ãƒ¡ãƒƒã‚»ãƒ¼ã‚¸ãŒé€ä¿¡ã•ã‚Œã¾ã—ãŸï¼ï¼ˆãƒ¢ãƒƒã‚¯å®Ÿè£…ï¼‰');
            // æœ¬ç•ªå®Ÿè£…: ã‚µãƒ¼ãƒãƒ¼ã‚µã‚¤ãƒ‰APIï¼ˆä¾‹: Node.js + Nodemailerï¼‰ã§ãƒ¡ãƒ¼ãƒ«é€ä¿¡
        });

        // ãƒšãƒ¼ã‚¸ãƒˆãƒƒãƒ—ã«æˆ»ã‚‹ãƒœã‚¿ãƒ³
        const backToTopButton = document.getElementById('back-to-top');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 300) {
                backToTopButton.classList.remove('hidden');
                backToTopButton.classList.add('show');
            } else {
                backToTopButton.classList.remove('show');
                backToTopButton.classList.add('hidden');
            }
        });
        backToTopButton.addEventListener('click', () => {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
